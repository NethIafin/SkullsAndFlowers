@page "/"
@rendermode InteractiveServer

<PageTitle>Home - Skulls And Flowers</PageTitle>

<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Welcome to Skulls And Flowers</h2>
                </div>
                <div class="card-body">
                    <p class="lead text-center">
                        A web interface for your card game
                    </p>
                    
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <a href="deck-builder" class="btn btn-primary btn-lg">
                            <i class="bi bi-card-list"></i> Build Decks
                        </a>
                        <a href="create-game" class="btn btn-success btn-lg">
                            <i class="bi bi-play-fill"></i> Start New Game
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>